function check_user_agent(){
 	$userAgent = $_SERVER['HTTP_USER_AGENT'];
	$os = "";
	if (strpos($userAgent, 'Android') !== false) {
    		$os = "Android";
	}

	if(strpos($userAgent, 'Windows') !== false){
		$os = "Windows";
	}

	if (strpos($userAgent, 'iPhone') !== false){
		$os = "iPhone";
	}

	return "Android";
}

