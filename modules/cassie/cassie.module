function get_cookie(){
	if (isset($_COOKIE['location'])){
		$cookie = $_COOKIE['location'];
        	$cookie = stripslashes($cookie);
        	$cookieArray = json_decode($cookie, true);
		return $cookieArray;
	} else{
		return cassie_init();
	}
}


